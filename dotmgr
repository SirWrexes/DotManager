import shutil
import os
from glob import glob as wildcard

from include.eprint import eprint
from include.Dot import Dot

dots = []
dotsDir = os.path.abspath('./dots')
toSave = []

for _ in wildcard(os.path.join(dotsDir, '*.json')):
    dots.append(Dot.from_json(_))

for item in dots:
    if shutil.which(item.command) is None:
        continue
    print(item.name)
